<!-- PHCTitleSEO Title Variables -->
<% phc_title "Accounts - Subscriptions" %>
<% phc_title_tagline "Please Select a Subscription" %>
<% phc_breadcrumb_one link_to "Dashboard", phcdevworks_accounts.dashboard_path %>
<% phc_breadcrumb_two yield(:phc_title_tagline) %>
<!-- PHCTitleSEO Title Variables -->

<!-- Page Bradcrumbs -->
<ol class="breadcrumb pull-right">
	<li class="breadcrumb-item"><%= yield(:phc_breadcrumb_one) %></li>
	<li class="breadcrumb-item active"><%= yield(:phc_breadcrumb_two) %></li>
</ol>
<!-- Page Bradcrumbs -->

<!-- Page Header -->
<h2 class="page-header"><%= yield(:phc_title) %></h2>
<!-- Page Header -->

<!-- Page Content -->
<div class="row">
	<div class="col-lg-12">

		<!-- Panel -->
		<div class="panel panel-inverse">

			<!-- Panel - Heading -->
			<div class="panel-heading">
				<h4 class="panel-title"><%= yield(:phc_title) %></h4>
			</div>
			<!-- Panel - Heading -->

			<!-- Panel - Body -->
			<div class="panel-body">

				<!-- Index - List -->
                <ul class="list-group">
                    <% @subscription_plans_list.each do |stripe_plans_list| %>
                    	<%= link_to phcdevworks_accounts.new_user_subscription_path(:plan_id => stripe_plans_list.id) do %>
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1"><%= stripe_plans_list.unit_amount %></h5>
                            </div>
                       
                        <% end %>
                    <% end %>
                </ul>
		        <!-- Index - List -->

			</div>
			<!-- Panel - Body -->

		</div>
		<!-- Panel -->

	</div>
</div>
<!-- Page Content -->
